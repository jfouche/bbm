{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "del /S /Q build\\*"
        },
        {
            "label": "windeployqt",
            "type": "shell",
            "command": "cd build/app && windeployqt bbm-ui.exe && cd ../test && windeployqt test-bbm.exe"
        },
        {
            "label": "cppcheck",
            "type": "shell",
            "command": "cppcheck --project=build/compile_commands.json --template=\"{file}:{line}:0: {severity}: {message}\" -DQ_MOC_OUTPUT_REVISION=67",
            "problemMatcher":"$gcc"
        }
    ]
}