    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "cd build && mingw32-make -f Makefile",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
              }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cd build && cmake -G \"MinGW Makefiles\" -DCMAKE_PREFIX_PATH=E:\\App\\Qt\\5.15.0\\mingw81_64 .."
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "del /S /Q build\\*"
        }
    ]
}